<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BlackFont">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="GrayFont">
        <item name="android:textColor">#D6868181</item>
    </style>

    <style name="BlackFont.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BlackFont.14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BlackFont.12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="GrayFont.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="GrayFont.14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="GrayFont.12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyButton">
        <item name="android:background">#F44336</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
